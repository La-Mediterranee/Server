{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "dist",
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"lib": ["ESNext"],
		"strictNullChecks": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"baseUrl": "./",
		"paths": {
			"@config/*": ["src/config/*"],
			"@utils/*": ["src/utils/*"],
			"@routes/*": ["src/routes/*"]
		}
	},
	"compileOnSave": true,
	"ts-node": {
		"files": true,
		"esm": true
	},
	"files": ["src/index.ts", "src/global.d.ts"],
	"include": ["./src"]
}
